<div class="container">
  <div class="row">
    <!--ジャンル検索画面-->
    <div class="col-md-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <!--商品一覧画面-->
    <div class ="col-md-10">
      <div class ="title">
        <p>商品一覧(全<%= @items.count %>件</p>
      </div>

      <div class ="item-box">
        <% @items.limit(8).each do |item| %>
        <div class = "col-md3">
          <a href="/items/<%= item.id %>">
            <%= image_tag item.get_image, size: '200x200' %><br>
            <%= item.item_name %>
            <p>¥<%= item.tax_price.to_s(:delimited, delimiter: ',') %></p></p>
          </a>
        </div>
       <% end %>
      </div>
    </div>

      <div class = "mx-auto">
        <%= paginate @items %>
      </div>
    </div>
  </div>