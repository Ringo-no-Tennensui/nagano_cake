<div class="container-md">
  <!--フラッシュ表示-->
  <%= flash[:notice] %>
  <table class="mx-auto">
    <tr class="row">
      <td>
        <div class="col">
        <h2>商品一覧</h2>
        </div>
      </td>
      <td>
        <!--アイコンから新規商品登録へ行ける-->
        <%= link_to new_admin_item_path, class: "col col-lg-2" do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>税抜価格</td>
      <td>ジャンル</td>
      <td>ステータス</td>
    </tr>
    <!--アイテムを１０件表示して名前から商品詳細に飛べる-->
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_items_path do%><%= item.item_name %><% end %></td>
      <td><%= item.item_price %>円</td>
      <td><%= item.item_genre.genre %></td>
      <td><%= item.sales_status_i18n %></td>
    </tr>
    <% end %>
  </table>
  <%= paginate @items %>
</div>