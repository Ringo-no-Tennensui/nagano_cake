<div class="container-md">
  <h1>会員一覧</h1>
  <table class ="table">
    <tr bgcolor="#BFC5CA">
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer) do %><%= customer.customer_name %><% end %></td>
      <td><%= customer.email %></td>
      <td><%= customer.member_status_i18n %></td>
    </tr>
    <% end %>
  </table>
</dev>