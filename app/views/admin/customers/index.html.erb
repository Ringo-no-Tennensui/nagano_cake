<div class="container-md">
  <h1>会員一覧</h1>
  <table class ="table">
    <tr bgcolor="#BFC5CA">
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer) do %><%= customer.customer_name %><% end %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.member_status == "exist" %>
          <p style = "color: #4ec51e;">有効</p>
        <% else %>
          <p style = "color: #ff3838;">退会</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</dev>