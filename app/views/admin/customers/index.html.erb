<div class="container-md">
  <h2>会員一覧</h2>
  <table>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customers_path do%><%= customer.last_name + customer.first_name %><% end %></td>
      <td><%= customer.email %></td>
      <td><%= customer.member_status_i18n %></td>
    </tr>
    <% end %>
  </table>
</dev>