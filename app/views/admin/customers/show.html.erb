<div class="container-md">
  <%= flash[:notice] %>
  <h2><%= @customer.customer_name %>さんの会員詳細</h2>
  <table class="mt-5 mb-5">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %></td>
      <td><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana %></td>
      <td><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
        <!--会員ステータスを表示し、色分け-->
    <% if @customer.member_status == "exist" %>
      <td style = "color: #4ec51e;">有効</td>
    <% else %>
      <td style = "color: #ff3838;">退会</td>
    <% end %>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
      <td><%= link_to "注文履歴一覧を見る",admin_root_path, class: "btn btn-secondary" %></td>
    </tr>
  </table>
</div>