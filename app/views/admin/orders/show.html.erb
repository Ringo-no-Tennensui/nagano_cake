<div class="container">
  <h2>注文履歴詳細</h2>
  <table>
    <tr>
      <td>購入者</td>
      <td>
        <%= link_to admin_customer_path do%>
        <%= @order.customer.last_name + @order.customer.first_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime(%y%m%d) %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.ships_post_number %><%= @order.ships_address %></td><br>
      <td><%= @order.ships_name%></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_i18n %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <%= form_with model: @order, method: :patch,local: true do |f| %>
      <td>
      <%= f.select :order_status, options_from_collection_for_select(Order.all, :order_status) %>
      </td>
      <td>
      <%= f.submit "更新", class: "btn btn-success" %>
      </td>
      <% end %>
    </tr>
  </table>
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td>製作ステータス</td>
        </tr>
        <%= @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.item_name %></td>
          <td><%= order_detail.item_price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= order_detail.item_price.to_i * order_detail.quantity.to_i(:delimited, delimiter: ',') %></td>
          <td>
          <%= form_with model: order_detail, method: :patch,local: true do |f| %>
          <%= f.select :task_status, options_from_collection_for_select(OrderDetail.all, :task_status) %>
          <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col col-lg-3">
      <table>
        <tr>
          <td>商品合計</td>
          <td><%= @order_details.item_price.to_i * @order_details.quantity.to_i(:delimited, delimiter: ',') %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td><%= @order_details.item_price.to_i * @order_details.quantity.to_i + 800.to_i(:delimited, delimiter: ',') %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>