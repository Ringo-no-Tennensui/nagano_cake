<div class="container">
  <div class="row">
    <% if admin_signed_in? %>
    <div class='col-md-10'>
      <h2><%= @word %>の検索結果</h2>
        <p>[全<%= @customers.count %>件]</p>
      <div class ="item-box">
        <div class = "row">
        <table>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer) do %><%= customer.customer_name %><% end %></td>
            <td><%= customer.email %></td>
            <td><%= customer.member_status_i18n %></td>
          </tr>
        <% end %>
        </table>
        </div>
      </div>
    </div>
    <% else %>
    <div class="col-md-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <div class='col-md-10'>
      <h2><%= @word %>の検索結果</h2>
        <p>[全<%= @items.count %>件]</p>
      <div class ="item-box">
        <div class = "row">
        <% @items.each do |item| %>
          <div class ="gold col-md-3 mb-3 text-center">
          <a href="/items/<%= item.id %>" class="card h-100 m-0"
            style="background-color: #001A43;">
            <%= image_tag item.get_image(200,200), class: "item-image-card mt-1 mx-auto" %><br>
            <div class ="mt-5" style="background-color: #001A43;">
              <h5 class="gold card-title"><%= item.item_name %></h5>
              <p class="gold card-text">¥<%= item.tax_price.to_s(:delimited) %></p>
            </div>
          </a>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>